<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:ignore="HardcodedText" >

    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f4f4f4">
        <ImageView
            android:id="@+id/cartProdImage1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:src="@drawable/p1"
            android:contentDescription="1" />

        <TextView
            android:id="@+id/cartProdName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cartProdImage1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/cartProdImage1"
            android:fontFamily="sans-serif-condensed"
            android:text="Zelletria"
            android:textColor="#111"
            android:textSize="12sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cartProdName1"
            android:layout_below="@+id/cartProdName1"
            android:layout_marginTop="5dp"
            android:text="Spring Collection"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/cartQtyTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cartProdName1"
            android:layout_marginEnd="20dp"
            android:text="$0.25 x 2"
            android:textColor="#111"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/item1"
        android:background="#f4f4f4">
        <ImageView
            android:id="@+id/cartProdImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:src="@drawable/p2"
            android:contentDescription="2" />

        <TextView
            android:id="@+id/cartProdName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cartProdImage2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/cartProdImage2"
            android:fontFamily="sans-serif-condensed"
            android:text="Letria"
            android:textColor="#111"
            android:textSize="12sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cartProdName2"
            android:layout_below="@+id/cartProdName2"
            android:layout_marginTop="5dp"
            android:text="Summer Collection"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/cartQtyTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cartProdName2"
            android:layout_marginEnd="20dp"
            android:text="$0.25 x 1"
            android:textColor="#111"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/item2"
        android:background="#f4f4f4">
        <ImageView
            android:id="@+id/cartProdImage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:src="@drawable/p3"
            android:contentDescription="3" />

        <TextView
            android:id="@+id/cartProdName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cartProdImage3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/cartProdImage3"
            android:fontFamily="sans-serif-condensed"
            android:text="Montria"
            android:textColor="#111"
            android:textSize="12sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cartProdName3"
            android:layout_below="@+id/cartProdName3"
            android:layout_marginTop="5dp"
            android:text="Summer Collection"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/cartQtyTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cartProdName3"
            android:layout_marginEnd="20dp"
            android:text="$0.25 x 1"
            android:textColor="#111"
            android:textSize="14sp"
            android:textStyle="normal|bold"/>

    </RelativeLayout>


    <!-- TAB BAR -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
    >


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/cartBottomView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f4f4f4" android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Total Amount: "
                android:textSize="12sp"
                android:textStyle="normal|bold"/>

            <TextView
                android:id="@+id/cartCurrencyTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="$"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/cartTotalAmountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="1.00"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/cartCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/holo_orange_light"
            android:text="Checkout"
            android:textSize="12sp"
            android:textStyle="normal|bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cartNotesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2000dp"
        android:background="#fff">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Write a note for this product, such as desired size or color, etc."
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/cartNoteTxt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="49dp"
            android:background="#f1f1f1"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="tap here to type"
            android:inputType="none"
            android:maxLines="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="false"
            android:textColor="#333"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/cartSaveNoteButt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_below="@+id/cartNoteTxt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:background="@android:color/holo_orange_light"
            android:text="Save note"/>
    </RelativeLayout>
</RelativeLayout>

